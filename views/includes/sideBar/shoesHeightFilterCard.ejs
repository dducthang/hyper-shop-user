<div class="card sidebar-menu mb-4">
  <div class="card-header">
    <h3 class="h4 card-title">
      Shoes Height
      <a href="#" class="btn btn-sm btn-danger pull-right shoesHeight-clear"
        ><i class="fa fa-times-circle"></i> Clear</a
      >
    </h3>
  </div>
  <div class="card-body">
    <form>
      <div class="form-group shoesHeight-form">
        <%for(shoesHeight of shoesHeights){%>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="<%=shoesHeight._id%>" />
            <%=shoesHeight._id.replace(/(^|\s)\S/g, letter =>
            letter.toUpperCase());%>
          </label>
        </div>
        <%}%>
      </div>
      <button class="btn btn-default btn-sm btn-primary shoesHeight-button">
        <i class="fa fa-pencil"></i> Apply
      </button>
    </form>
  </div>
</div>
