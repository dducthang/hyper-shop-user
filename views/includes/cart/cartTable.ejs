<!-- TABLE OF ITEM IN CART ======================================= -->
<div class="box">
    <form method="get" action="/checkout">
        <h1>Shopping cart</h1>
        <p class="text-muted">You currently have <%= cart.orderItems.length%> item(s) in your cart.</p>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">Product</th>
                        <th>Quantity</th>
                        <th>Unit price</th>
                        <th>Discount</th>
                        <th colspan="2">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% let total = 0%>
                    <% for (let i=0;i<cart.orderItems.length;i++) { %>
                    <tr id="row-<%=cart.orderItems[i]._id%>">
                        <td><a href="/products/<%=cart.orderItems[i].product._id%>"><img src="<%=cart.orderItems[i].product.image%>" alt="<%=cart.orderItems[i].product.name%>"></a></td>
                        <td><a href="/products/<%=cart.orderItems[i].product._id%>"><%=cart.orderItems[i].product.name%></a></td>
                        <td>
                            <input type="number" value="<%=cart.orderItems[i].quantity%>" class="form-control">
                        </td>
                        <td>$<%=cart.orderItems[i].product.price%></td>
                        <td>$0.00</td>
                        <td>$<%=cart.orderItems[i].quantity*cart.orderItems[i].product.price%></td>
                        <td><a href="#"><i class="fa fa-trash-o delete-product-btn" id="<%=cart.orderItems[i]._id%>"></i></a></td>
                    </tr>
                    <%total += cart.orderItems[i].quantity*cart.orderItems[i].product.price%>
                    <% } %>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5">Total</th>
                        <th colspan="2">$<%=total%></th>
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.table-responsive-->
        <div class="box-footer d-flex justify-content-between flex-column flex-lg-row">
            <div class="left">
                <a href="/products" class="btn btn-outline-secondary"><i
                        class="fa fa-chevron-left"></i> Continue shopping</a>
                    </div>
            <div class="right">
                <!-- <button class="btn btn-outline-secondary"><i class="fa fa-refresh"></i> Update cart</button> -->
                <button type="submit" class="btn btn-primary">Proceed to checkout <i
                        class="fa fa-chevron-right"></i></button>
            </div>
        </div>
    </form>
</div>